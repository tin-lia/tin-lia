#include <iostream>
using namespace std;

int main() 
{

int num1,num2;
char op;

cout << "Enter first number : " << endl;
cin >> num1;
cout << "Enter second number : " << endl;
cin >> num2;
cout << "Enter an operator (+,-,*,/) : ";
cin >> op;

switch(op)
  
 {
 case '+':
  cout << "\n "<<num1<<" + "<<num2<<" = " <<num1+num2<< endl;
  break;
 case '-':
  cout << "\n "<<num1<<" - "<<num2<<" = " <<num1-num2<< endl;
  break;
 case '*':
  cout << "\n "<<num1<<" * "<<num2<<" = " <<num1*num2<< endl;
  break;
 case '/': 
        if (num2 != 0) {
           cout << "\n "<<num1<<" / "<<num2<<" = " <<num1/num2<< endl;
        }  else {
           cout << "Error: Division by zero!." << endl;
         }
        break;
  
 default:
  cout << "Invalid operator ";
  break;
  }
  return 0; 
  
}
  
